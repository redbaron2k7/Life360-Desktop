{
  "name": "life360-desktop-app",
  "version": "1.0.0",
  "description": "Life360 Desktop App",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"cross-env BROWSER=none webpack serve --mode development\" \"wait-on http://localhost:8080 && cross-env ELECTRON_START_URL=http://localhost:8080 electron .\"",
    "build": "webpack --mode production",
    "electron-dev": "cross-env ELECTRON_START_URL=http://localhost:8080 electron ."
  },
  "dependencies": {
    "electron": "^13.1.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "@reduxjs/toolkit": "^1.6.1",
    "react-leaflet": "^3.2.0",
    "leaflet": "^1.7.1",
    "getmac": "^5.20.0",
    "tailwindcss": "^2.2.7",
    "postcss": "^8.3.6",
    "autoprefixer": "^10.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-react": "^7.14.5",
    "babel-loader": "^8.2.2",
    "css-loader": "^6.2.0",
    "style-loader": "^3.2.1",
    "html-webpack-plugin": "^5.3.2",
    "webpack": "^5.47.1",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^4.0.0",
    "concurrently": "^6.2.0",
    "wait-on": "^6.0.0",
    "cross-env": "^7.0.3"
  }
}